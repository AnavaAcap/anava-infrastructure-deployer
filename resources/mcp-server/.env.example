# Anava MCP Server Configuration Example
# Copy this to .env and update with your camera details

# Single Camera Configuration
ANAVA_HOST=192.168.1.100
ANAVA_USERNAME=admin
ANAVA_PASSWORD=your_camera_password
ANAVA_PORT=80

# Optional: Multiple Cameras (comment out single camera config above)
# CAMERAS=office:192.168.1.100:80:admin:pass123,garage:192.168.1.101:80:root:garage_pass

# Security Settings
PERMISSION_LEVEL=full_access
MCP_ACCESS_TOKEN=
MAX_REQUESTS_PER_MINUTE=60
MAX_ANALYSES_PER_HOUR=100

# Optional: Audio Features
ELEVENLABS_API_KEY=your_elevenlabs_key
DEFAULT_VOICE_ID=21m00Tcm4TlvDq8ikWAM

# Debug
DEBUG=false
LOG_LEVEL=info
EOF < /dev/null
