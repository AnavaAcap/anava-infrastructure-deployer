{
  "name": "@anava/mcp-server",
  "version": "1.0.0",
  "description": "MCP server for Anava ACAP - AI-powered camera vision analysis",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "anava-mcp": "./dist/index.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/AnavaAI/anava-mcp-server.git"
  },
  "bugs": {
    "url": "https://github.com/AnavaAI/anava-mcp-server/issues"
  },
  "homepage": "https://github.com/AnavaAI/anava-mcp-server#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/index.ts",
    "start": "node dist/index.js",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --maxWorkers=2",
    "test:integration": "jest --testMatch='**/*.integration.test.ts' --runInBand",
    "test:security": "jest --testMatch='**/security*.test.ts' --runInBand",
    "test:all": "npm run lint && npm run type-check && npm run test:coverage && npm run test:integration",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "security:audit": "npm audit --audit-level=moderate",
    "security:check": "npm run security:audit && npm run test:security",
    "precommit": "npm run lint && npm run type-check && npm run test",
    "prepush": "npm run test:all"
  },
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "@modelcontextprotocol/sdk": "^1.0.4",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/exporter-prometheus": "^0.202.0",
    "@opentelemetry/exporter-trace-otlp-http": "^0.202.0",
    "@opentelemetry/instrumentation": "^0.202.0",
    "@opentelemetry/instrumentation-http": "^0.202.0",
    "@opentelemetry/resources": "^2.0.1",
    "@opentelemetry/sdk-metrics": "^2.0.1",
    "@opentelemetry/sdk-trace-base": "^2.0.1",
    "@opentelemetry/sdk-trace-node": "^2.0.1",
    "@opentelemetry/semantic-conventions": "^1.34.0",
    "@types/ws": "^8.18.1",
    "argon2": "^0.31.2",
    "axios": "^1.7.2",
    "bcrypt": "^5.1.1",
    "crypto-js": "^4.2.0",
    "digest-fetch": "^3.1.1",
    "dotenv": "^16.4.5",
    "express-rate-limit": "^7.1.5",
    "form-data": "^4.0.0",
    "helmet": "^7.1.0",
    "ioredis": "^5.3.2",
    "jsonwebtoken": "^9.0.2",
    "node-forge": "^1.3.1",
    "otplib": "^12.0.1",
    "rate-limiter-flexible": "^3.0.6",
    "speakeasy": "^2.0.0",
    "winston": "^3.17.0",
    "ws": "^8.18.3",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.29.0",
    "@jest/globals": "^30.0.0",
    "@types/jest": "^30.0.0",
    "@types/nock": "^10.0.3",
    "@types/node": "^20.14.0",
    "@types/sinon": "^17.0.4",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.34.1",
    "@typescript-eslint/parser": "^8.34.1",
    "eslint": "^9.29.0",
    "eslint-import-resolver-typescript": "^4.4.3",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jest": "^28.14.0",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-security": "^3.0.1",
    "globals": "^16.2.0",
    "jest": "^30.0.0",
    "nock": "^14.0.5",
    "sinon": "^21.0.0",
    "supertest": "^7.1.1",
    "ts-jest": "^29.4.0",
    "tsx": "^4.7.0",
    "typescript": "^5.5.0"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "axis",
    "camera",
    "vision",
    "ai",
    "anava"
  ],
  "author": "Anava Team",
  "license": "MIT"
}
