rules_version = '2';

service firebase.storage {
  // This rule applies to any bucket linked to Firebase Storage for this project.
  // {bucket} will be the actual GCS bucket name being accessed.
  match /b/{bucket}/o {
    // Allow authenticated users to upload/download files
    // This covers camera footage, images, logs, etc.
    match /{allPaths=**} {
      allow read, write: if request.auth != null;
    }
  }
}